<% if @events.any? %>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @events.each do |event| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= event.name %></h5>
            <p class="card-text"><%= event.description %></p>
            <p class="card-text"><strong>Data:</strong> <%= event.event_start.strftime("%d/%m/%Y") %></p>
            <p class="card-text"><strong>Hora:</strong> <%= event.event_start.strftime("%H:%M") %></p>
          </div>
          <div class="card-footer">
            <small class="text-muted"><%= event.category %></small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div id="no-events">
      <h4>Não há eventos</h4>
  </div>
<% end %>
