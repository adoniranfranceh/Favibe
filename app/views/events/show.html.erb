<!-- app/views/events/show.html.erb -->

<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h1 class="card-title text-center"><%= @event.name %></h1>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong><%= Event.human_attribute_name(:description) %>:</strong>
            <p><%= @event.description %></p>
          </div>
          <div class="mb-3">
            <strong><%= Event.human_attribute_name(:event_start) %>:</strong>
            <p><%= @event.event_start.strftime("%d/%m/%Y %H:%M") %></p>
          </div>
          <div class="mb-3">
            <strong><%= Event.human_attribute_name(:event_end) %>:</strong>
            <p><%= @event.event_end.strftime("%d/%m/%Y %H:%M") %></p>
          </div>
          <div class="mb-3">
            <strong><%= Event.human_attribute_name(:location) %>:</strong>
            <p><%= @event.location %></p>
          </div>
          <div class="mb-3">
            <strong><%= Event.human_attribute_name(:category) %>:</strong>
            <p><%= @event.category %></p>
          </div>
          <div class="mb-3">
            <strong><%= Event.human_attribute_name('status') %>:</strong>
            <p><%= Event.human_enum_name(:status, @event.status) %></p>
          </div>
        </div>
        <div class="card-footer text-center">
          <%= link_to t(:edit), edit_event_path(@event), class: "btn btn-primary" %>
          <%= link_to t(:back), root_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
